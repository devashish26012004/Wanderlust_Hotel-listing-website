<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <h2 class="col-6 offset-3">Signup on wanderlust</h2>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <lable for="username" class="form-label">Username</lable>
        <input
          id="username"
          name="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <lable for="email" class="form-label">email</lable>
        <input
          id="email"
          name="email"
          type="email"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <lable for="password" class="form-label">password</lable>
        <input
          id="password"
          name="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
